extends base.pug

block content
  .post
      h1= title
      .date= date.toDateString()
      .content!= contents
      a(name="_comments")
      if (!hidden)
        .social
          script(src="https://apis.google.com/js/plusone.js")
          a(href="https://twitter.com/share",
              class="twitter-share-button",data-via="spion") Tweet
          script.
              !function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+'://platform.twitter.com/widgets.js';fjs.parentNode.insertBefore(js,fjs);}}(document, 'script', 'twitter-wjs');
          .g-plusone
          a(href="http://news.ycombinator.com/submit",
              class="hn-share-button") Vote on HN
          script.
              (function(d, t) {
                  var g = d.createElement(t),
                      s = d.getElementsByTagName(t)[0];
                  g.src = '//hnbutton.appspot.com/static/hn.min.js';
                  s.parentNode.insertBefore(g, s);
              }(document, 'script'));
      div#disqus_thread
      script.
          /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
          var disqus_shortname = 'ahintofchaos'; // required: replace example with your forum shortname

          /* * * DON'T EDIT BELOW THIS LINE * * */
          (function() {
              var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
              dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
              (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
          })();
      //
        a.dsq-brink(href="http://disqus.com") comments powered by
          span.logo-disqus Disqus

